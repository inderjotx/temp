{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["packages/*"],
      "@/types/*": ["packages/types/*"]
    }
  },
  "exclude": ["node_modules"]
}
